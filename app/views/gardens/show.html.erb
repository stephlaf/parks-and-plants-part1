<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.banner_url %>);">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @garden.plants.each do |plant| %>
      <div class="col-4 my-3">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
              url('<%= plant.image_url %>')">
          <%= plant.name %>
          <%= link_to '+', plant_path(plant), method: 'delete', data: { confirm: 'Really?' }, class: 'card-remove-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a Plant</h4>
        <%= simple_form_for([@garden, @plant]) do |f| %>
          <%= f.input :name, placeholder: 'Palm Tree' %>
          <%= f.input :image_url, placeholder: 'A nice image from Google' %>
          <%= f.submit 'Add', class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>
